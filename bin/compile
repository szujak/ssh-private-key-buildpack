#!/usr/bin/env bash

function indent() {
	c='s/^/       /'
	case $(uname) in
		Darwin) sed -l "$c";;
		*)      sed -u "$c";;
	esac
}

env_dir=$3
key_file="$env_dir/SSH_KEY"

if [ -f "$key_file" ]; then
	echo "-----> Running SSH private key setup"

	mkdir "$HOME/.ssh"
	cp "$key_file" "$HOME/.ssh/id_rsa"
	ssh -oStrictHostKeyChecking=no -T git@bitbucket.org 2>&1 | indent
	exit 0
else
	echo "-----> No SSH private key"
fi
